<%= form_for [:admin, @article] do |f| %>
	<div class="form-group">
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>

	<div class="form-group">
		<% Article::CATEGORIES.each do |category| %>
			<label>
				<%= f.radio_button :category, category %>
				<%= t(category, :scope => "article.category") %>
			</label>
		<% end %>
	</div>

	<div class="form-group">
		<%= f.label :content %>
		<%= f.text_area :content %>
	</div>

	<%= f.submit "提交" %>
<% end %>